<!DOCTYPE html>
<html>
    <head>
        <title>Movie Fan Site</title>
        <% include head %>
    </head>
    <body>
        <% include navbar %>
        <div class="container">
            <div class="row">
                <div class="card my-3 shadow bg-light">
                    <div class="row g-0">
                        <div class="col-md-5">
                            <a href="<%= parseData.homepage %> ">
                                <img src="<%= imageBaseUrl + parseData.poster_path %>" alt="<%= parseData.title %>">
                            </a>
                        </div>
                        <div class="col-md-7">
                            <div class="card-body">
                                <h1 class="card-title text-primary"><%= parseData.title %></h1>
                                <h3 class="card-title"><%= parseData.tagline %></h3>
                                <p class="card-text"><span class="fw-bold">Movie Synopsis:</span> <%= parseData.overview %></p>
                                <ul class="list-group">
                                    <% parseData.production_companies.forEach(company => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <img src="<%= imageBaseUrl + company.logo_path %>" alt="<%= company.name %>" style="width: 50px;">
                                            <span class="fw-bold"><%= company.name %></span>
                                            <span class="badge bg-primary"><%= company.origin_country %></span>
                                        </li>
                                    <% }) %>
                                </ul>
                                <p class="d-flex justify-content-between card-text mt-3"><small class="fw-bold"><%= parseData.release_date %></small> <span class="text-primary"><%= parseData.status %></span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>